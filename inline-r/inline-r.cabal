    tasty >=0.3 && <1.5,
    tasty-hunit >=0.4.1 && <0.11,
    template-haskell >=2.8 && <2.21,
  ghc-options: -Wall -threaded
  hs-source-dirs: tests
  default-language: Haskell2010
  if os(windows)
    buildable: False

