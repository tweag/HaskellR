cabal-version:       >=1.10
build-type:          Custom
Category:            Compiler
Synopsis:            R-to-Haskell translator and interoperability solution.
-- description:
cabal-version:       >=1.10

data-files: H.ghci

extra-source-files:   cbits/Hcompat.h
                      cbits/missing_r.h
                      tests/ghci/qq.ghci
                      tests/ghci/qq-stderr.ghci
                      tests/ghci/qq.ghci.golden.output
                      tests/ghci/qq-stderr.ghci.golden.output
                      tests/ghci/compile-qq.ghci.golden.output
                      tests/ghci/qq-benchmarks.ghci
                      tests/shootout/binarytrees.R
                      tests/shootout/fasta.R
                      tests/shootout/knucleotide.R
                      tests/shootout/fastaredux.R
                      tests/shootout/mandelbrot.R
                      tests/shootout/mandelbrot-noout.R
                      tests/shootout/nbody.R
                      tests/shootout/pidigits.R
                      tests/shootout/regexdna.R
                      tests/shootout/reversecomplement.R
                      tests/shootout/spectralnorm.R
                      tests/shootout/spectralnorm-math.R
                      tests/shootout/fannkuchredux.R
                      tests/R/fib.R
                      tests/R/fib-benchmark.R
                      tests/ghciH.sh
                      tests/ghcH.sh
                      tests/sandbox-utils.sh
                      doc/H-ints.md
                      doc/H-user.md
                      doc/pandoc.css
                      Makefile

source-repository head
  type:     git
  location: git://github.com/ps-labs/H.git

Flag documentation 
  description:         Generate H manuals (requires pandoc).
  default:             False

library
  exposed-modules:     Data.Vector.SEXP
                       Data.Vector.SEXP.Base
                       Data.Vector.SEXP.Mutable
                       Foreign.R
                       Foreign.R.Embedded
                       Foreign.R.Error
                       Foreign.R.Parse
                       Foreign.R.Type
                       H.Constraints
                       H.Prelude
                       H.Prelude.Interactive
                       Language.R
                       Language.R.Debug
                       Language.R.GC
                       Language.R.Globals
                       Language.R.HExp
                       Language.R.Instance
                       Language.R.Internal.FunWrappers
                       Language.R.Internal.FunWrappers.TH
                       Language.R.Literal
                       Language.R.QQ
                       Control.Memory.Region
  other-modules:       Control.Concurrent.OSThread
                       Control.Monad.R.Class
                       H.Internal.Error
                       H.Internal.Prelude
  build-depends:       base >= 4.7 && < 5
                     , aeson >= 0.6
                     , bytestring >= 0.10
                     , pretty >= 1.1
                     , process >= 1.2
                     , setenv >= 0.1.1
                     , text >= 0.11
                     , vector >= 0.10
                     , template-haskell >= 2.8
                     , exceptions >= 0.6 && < 0.7
                     , mtl >= 2.1
                     , primitive >= 0.5
                     , singletons >= 0.9
                     , th-lift >= 0.6
                     , transformers >= 0.3
  hs-source-dirs:      src
  includes:            cbits/Hcompat.h cbits/missing_r.h
  c-sources:           cbits/missing_r.c
  include-dirs:        cbits
  default-language:    Haskell2010
  default-extensions:  BangPatterns
                       DataKinds
                       FlexibleInstances
                       FlexibleContexts
                       GeneralizedNewtypeDeriving
                       KindSignatures
                       MultiParamTypeClasses
                       NamedFieldPuns
                       RecordWildCards
                       TypeOperators
                       OverloadedStrings
  other-extensions:    CPP
                       ForeignFunctionInterface
  build-tools:         c2hs
  if os(windows)
    extra-libraries:   R
    cpp-options:       -DH_ARCH_WINDOWS
    cc-options:        -DH_ARCH_WINDOWS
  else
    build-depends:     unix >= 2.6
    pkgconfig-depends: libR >= 3.0
    cpp-options:       -DH_ARCH_UNIX
    cc-options:        -DH_ARCH_UNIX
    if os(darwin)
      cpp-options:     -DH_ARCH_UNIX_DARWIN
      cc-options:      -DH_ARCH_UNIX_DARWIN
  -- XXX -cpp is a temp workaround for GHC 7.8.
  ghc-options:         -Wall -Werror -cpp -fcontext-stack=32

executable H
  main-is:             src/Main.hs
  build-depends:       H
                     , base >= 4.7 && < 5
                     , bytestring >= 0.10
                     , cmdargs >= 0.10.5
                     , pretty >= 1.1
                     , process >= 1.2
                     , vector >= 0.10
  default-language:    Haskell2010
  default-extensions:  DataKinds
                       FlexibleInstances
                       FlexibleContexts
                       GeneralizedNewtypeDeriving
                       KindSignatures
                       MultiParamTypeClasses
                       NamedFieldPuns
                       RecordWildCards
                       StandaloneDeriving
                       TypeOperators
  ghc-options:         -Wall -Werror -threaded
  if os(windows)
    cpp-options:       -DH_ARCH_WINDOWS
    cc-options:        -DH_ARCH_WINDOWS
  else
    build-depends:     unix >= 2.6
    cpp-options:       -DH_ARCH_UNIX
    cc-options:        -DH_ARCH_UNIX

test-suite tests
  main-is:             tests.hs
  type:                exitcode-stdio-1.0
  build-depends:       H
                     , base >= 4.7 && < 5
                     , bytestring >= 0.10
                     , directory >= 1.2
                     , filepath >= 1.3
                     , mtl >= 2.0
                     , process >= 1.2
                     , strict >= 0.3.2
                     , tasty >= 0.3
                     , tasty-golden >= 2.1
                     , tasty-hunit >= 0.4.1
                     , text >= 0.11
                     , vector
                     , singletons
  other-modules:       Test.RVal
                       Test.FunPtr
                       Test.Constraints
                       Test.HExp
  -- Adding -j4 causes quasiquoters to be compiled concurrently
  -- in tests, which helps testing for race conditions when
  -- trying to initialize R from multiple threads.
  ghc-options:         -Wall -threaded -j4
  hs-source-dirs:      tests
  default-language:    Haskell2010
  default-extensions:  FlexibleContexts
                       OverloadedStrings
                       TypeOperators

test-suite test-compile-qq
  main-is:             test-compile-qq.hs
  type:                exitcode-stdio-1.0
  build-depends:       H
                     , base >= 4.7 && < 5
                     , process >= 1.2
  ghc-options:         -Wall -threaded
  hs-source-dirs:      tests
  default-language:    Haskell2010

test-suite test-shootout-programs
  main-is:             test-shootout-programs.hs
  type:                exitcode-stdio-1.0
  build-depends:       H
                     , base >= 4.7 && < 5
                     , filepath >= 1.3
                     , process >= 1.2
  ghc-options:         -Wall -threaded
  hs-source-dirs:      tests
  default-language:    Haskell2010
  if os(windows)
    cpp-options:       -DH_ARCH_WINDOWS
  else
    cpp-options:       -DH_ARCH_UNIX

test-suite test-vector
  main-is:            vector.hs
  type:               exitcode-stdio-1.0
  build-depends:      base
                    , H
                    , tasty
                    , tasty-quickcheck
                    , vector
                    , singletons >= 0.10
                    , quickcheck-assertions >= 0.1.1
                    , ieee754 >= 0.7.3
  ghc-options:        -Wall -threaded
  hs-source-dirs:     tests
  default-language:   Haskell2010


benchmark compile-qq-benchmarks
  main-is:             compile-qq-benchmarks.hs
  type:                exitcode-stdio-1.0
  build-depends:       H
                     , base >= 4.7 && < 5
                     , criterion >= 0.8
                     , filepath >= 1.3
                     , process >= 1.2
                     , template-haskell >= 2.8
  ghc-options:         -Wall -threaded
  hs-source-dirs:      tests
  default-language:    Haskell2010

benchmark runtime-qq-benchmarks
  main-is:             runtime-qq-benchmarks.hs
  type:                exitcode-stdio-1.0
  build-depends:       H
                     , base >= 4.7 && < 5
                     , filepath >= 1.3
                     , process >= 1.2
  ghc-options:         -Wall -threaded
  hs-source-dirs:      tests
  default-language:    Haskell2010

benchmark hexp-benchmark
  main-is:             hexp-bench.hs
  type:                exitcode-stdio-1.0
  build-depends:       H
                     , base >= 4.7 && < 5
                     , criterion >= 0.8
                     , primitive >= 0.5
                     , vector >= 0.10
                     , singletons
  ghc-options:         -Wall -threaded
  hs-source-dirs:      tests
  default-language:    Haskell2010
